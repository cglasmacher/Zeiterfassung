@import url('https://fonts.googleapis.com/css2?family=Inter:wght@300;400;500;600;700;800;900&family=Poppins:wght@400;500;600;700;800&display=swap');

@tailwind base;
@tailwind components;
@tailwind utilities;

@layer base {
  :root {
    /* Primary Colors - Gastro Orange */
    --primary-50: #fff5f0;
    --primary-100: #ffe8db;
    --primary-200: #ffd0b8;
    --primary-300: #ffb08a;
    --primary-400: #ff8a5c;
    --primary-500: #ff6b35;
    --primary-600: #f04e1a;
    --primary-700: #c73d10;
    --primary-800: #9e3310;
    --primary-900: #7f2d11;

    /* Secondary Colors - Professional Blue */
    --secondary-50: #e6f2f9;
    --secondary-100: #cce5f3;
    --secondary-200: #99cbe7;
    --secondary-300: #66b1db;
    --secondary-400: #3397cf;
    --secondary-500: #004e89;
    --secondary-600: #003e6e;
    --secondary-700: #002f53;
    --secondary-800: #001f38;
    --secondary-900: #00101d;

    /* Accent - Gold */
    --accent-50: #fef9e6;
    --accent-100: #fdf3cc;
    --accent-200: #fbe799;
    --accent-300: #f9db66;
    --accent-400: #f7cf33;
    --accent-500: #f7b801;
    --accent-600: #c59301;
    --accent-700: #946e01;
    --accent-800: #624a00;
    --accent-900: #312500;

    /* Success - Green */
    --success-50: #e8f8f0;
    --success-100: #d1f1e1;
    --success-200: #a3e3c3;
    --success-300: #75d5a5;
    --success-400: #47c787;
    --success-500: #2ecc71;
    --success-600: #25a35a;
    --success-700: #1c7a44;
    --success-800: #12522d;
    --success-900: #092917;

    /* Warning - Amber */
    --warning-50: #fef6e6;
    --warning-100: #fdedcc;
    --warning-200: #fbdb99;
    --warning-300: #f9c966;
    --warning-400: #f7b733;
    --warning-500: #f39c12;
    --warning-600: #c27d0e;
    --warning-700: #925e0b;
    --warning-800: #613e07;
    --warning-900: #311f04;

    /* Error - Red */
    --error-50: #fee6e6;
    --error-100: #fdcccc;
    --error-200: #fb9999;
    --error-300: #f96666;
    --error-400: #f73333;
    --error-500: #e74c3c;
    --error-600: #b93d30;
    --error-700: #8b2e24;
    --error-800: #5c1e18;
    --error-900: #2e0f0c;

    /* Neutral Colors */
    --neutral-50: #f8f9fa;
    --neutral-100: #f1f3f5;
    --neutral-200: #e9ecef;
    --neutral-300: #dee2e6;
    --neutral-400: #ced4da;
    --neutral-500: #adb5bd;
    --neutral-600: #868e96;
    --neutral-700: #495057;
    --neutral-800: #343a40;
    --neutral-900: #1a1a2e;

    /* Shadows */
    --shadow-sm: 0 1px 2px 0 rgb(0 0 0 / 0.05);
    --shadow-md: 0 4px 6px -1px rgb(0 0 0 / 0.1), 0 2px 4px -2px rgb(0 0 0 / 0.1);
    --shadow-lg: 0 10px 15px -3px rgb(0 0 0 / 0.1), 0 4px 6px -4px rgb(0 0 0 / 0.1);
    --shadow-xl: 0 20px 25px -5px rgb(0 0 0 / 0.1), 0 8px 10px -6px rgb(0 0 0 / 0.1);
    --shadow-2xl: 0 25px 50px -12px rgb(0 0 0 / 0.25);
    
    /* Glassmorphism */
    --glass-bg: rgba(255, 255, 255, 0.7);
    --glass-border: rgba(255, 255, 255, 0.18);
    --glass-shadow: 0 8px 32px 0 rgba(31, 38, 135, 0.15);
  }

  * {
    @apply border-neutral-300;
  }

  body {
    @apply bg-neutral-50 text-neutral-900 font-sans antialiased;
  }
}

@layer components {
  /* Glass Card */
  .glass-card {
    @apply bg-white/70 backdrop-blur-lg border border-white/20 shadow-lg rounded-2xl;
  }

  /* Gradient Backgrounds */
  .gradient-primary {
    @apply bg-gradient-to-br from-primary-500 to-primary-700;
  }

  .gradient-secondary {
    @apply bg-gradient-to-br from-secondary-500 to-secondary-700;
  }

  .gradient-accent {
    @apply bg-gradient-to-br from-accent-400 to-accent-600;
  }

  /* Button Styles */
  .btn {
    @apply px-4 py-2 rounded-lg font-medium transition-all duration-200 focus:outline-none focus:ring-2 focus:ring-offset-2;
  }

  .btn-primary {
    @apply btn bg-primary-500 text-white hover:bg-primary-600 focus:ring-primary-500 shadow-md hover:shadow-lg;
  }

  .btn-secondary {
    @apply btn bg-secondary-500 text-white hover:bg-secondary-600 focus:ring-secondary-500 shadow-md hover:shadow-lg;
  }

  .btn-outline {
    @apply btn border-2 border-primary-500 text-primary-500 hover:bg-primary-50 focus:ring-primary-500;
  }

  .btn-ghost {
    @apply btn text-neutral-700 hover:bg-neutral-100 focus:ring-neutral-500;
  }

  /* Input Styles */
  .input {
    @apply w-full px-4 py-2.5 rounded-lg border border-neutral-300 focus:border-primary-500 focus:ring-2 focus:ring-primary-500/20 transition-all duration-200;
  }

  /* Badge Styles */
  .badge {
    @apply inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium;
  }

  .badge-success {
    @apply badge bg-success-100 text-success-700;
  }

  .badge-warning {
    @apply badge bg-warning-100 text-warning-700;
  }

  .badge-error {
    @apply badge bg-error-100 text-error-700;
  }

  .badge-primary {
    @apply badge bg-primary-100 text-primary-700;
  }

  /* Card Styles */
  .card {
    @apply bg-white rounded-xl shadow-md hover:shadow-lg transition-shadow duration-200;
  }

  .card-header {
    @apply px-6 py-4 border-b border-neutral-200;
  }

  .card-body {
    @apply px-6 py-4;
  }

  .card-footer {
    @apply px-6 py-4 border-t border-neutral-200 bg-neutral-50;
  }

  /* Typography */
  .heading-1 {
    @apply text-4xl font-bold text-neutral-900 tracking-tight;
  }

  .heading-2 {
    @apply text-3xl font-bold text-neutral-900 tracking-tight;
  }

  .heading-3 {
    @apply text-2xl font-semibold text-neutral-900;
  }

  .heading-4 {
    @apply text-xl font-semibold text-neutral-900;
  }

  .text-body {
    @apply text-base text-neutral-700;
  }

  .text-small {
    @apply text-sm text-neutral-600;
  }

  .text-tiny {
    @apply text-xs text-neutral-500;
  }

  /* Animations */
  .animate-fade-in {
    animation: fadeIn 0.3s ease-in;
  }

  .animate-slide-up {
    animation: slideUp 0.3s ease-out;
  }

  .animate-scale-in {
    animation: scaleIn 0.2s ease-out;
  }

  @keyframes fadeIn {
    from {
      opacity: 0;
    }
    to {
      opacity: 1;
    }
  }

  @keyframes slideUp {
    from {
      transform: translateY(10px);
      opacity: 0;
    }
    to {
      transform: translateY(0);
      opacity: 1;
    }
  }

  @keyframes scaleIn {
    from {
      transform: scale(0.95);
      opacity: 0;
    }
    to {
      transform: scale(1);
      opacity: 1;
    }
  }

  /* Scrollbar Styling */
  .custom-scrollbar::-webkit-scrollbar {
    width: 8px;
    height: 8px;
  }

  .custom-scrollbar::-webkit-scrollbar-track {
    @apply bg-neutral-100 rounded-full;
  }

  .custom-scrollbar::-webkit-scrollbar-thumb {
    @apply bg-neutral-400 rounded-full hover:bg-neutral-500;
  }
}

@layer utilities {
  .text-gradient {
    @apply bg-clip-text text-transparent bg-gradient-to-r from-primary-500 to-accent-500;
  }

  .border-gradient {
    border: 2px solid transparent;
    background-image: linear-gradient(white, white), linear-gradient(to right, #ff6b35, #f7b801);
    background-origin: border-box;
    background-clip: padding-box, border-box;
  }
}